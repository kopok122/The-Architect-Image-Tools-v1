        <span class="hljs-keyword">if</span> parent <span class="hljs-keyword">is</span> <span class="hljs-literal">None</span> <span class="hljs-keyword">or</span> <span class="hljs-built_in">isinstance</span>(parent, tk.Tk):
            <span class="hljs-comment"># Standalone mode (existing behavior)</span>
            <span class="hljs-variable language_">self</span>.root = tk.Tk() <span class="hljs-keyword">if</span> parent <span class="hljs-keyword">is</span> <span class="hljs-literal">None</span> <span class="hljs-keyword">else</span> parent
            <span class="hljs-keyword">try</span>:
                <span class="hljs-variable language_">self</span>.root.title(<span class="hljs-string">"Advanced ExifTool GUI"</span>)
