    <span class="hljs-keyword">def</span> <span class="hljs-title function_">__init__</span>(<span class="hljs-params">self, parent</span>):
        <span class="hljs-keyword">if</span> <span class="hljs-built_in">isinstance</span>(parent, tk.Tk):
